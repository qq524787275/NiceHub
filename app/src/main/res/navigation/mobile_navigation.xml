<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/fragment_container">
    <fragment
        android:id="@+id/fragment_container"
        android:name="com.zhuzichu.nice.ContainerFragment"
        android:label="fragment_container"
        tools:layout="@layout/fragment_container">
        <action
            android:id="@+id/action_fragment_container_to_fragment_detail"
            app:destination="@id/fragment_detail"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="com.zhuzichu.nice.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail" />
</navigation>
